<!DOCTYPE html>
<html lang="zxx">

<%- include("head" ) -%>

<body>


   <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="../img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>ADD Product</h2>
                        <div class="breadcrumb__option">
                            <a href="./index.html">Home</a>
                            <span>Add Product</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
   <br>
    <!-- ADD Shop -->
    <form class="col-md-10"  method="POST" 
    <%if (uflag) { %>     action="/updateproducts/<%= product.productid %>"
        <% } else { %>
             action="/addproducts"
    <% } %>
    >
        <div class="form-row">
            <div class="form-group col-md-4 ">
            <label for="inputuser">Name </label>
            <input type="text" class="form-control" id="inputuser" name="name" placeholder="Name" <%if (uflag) { %>  value="<%= product.name %>"  <%}%>
             >
            </div>
            <div class="form-group col-md-3">
            <label for="inputPrice">Price</label>
            <input type="text" class="form-control" id="inputPrice" name="price" placeholder="Price" <%if (uflag) { %>  value="<%= product.price %>"  <%}%>>
            </div>
            <div class="form-group col-md-3">
            <label for="inputquantity">Quantity</label>
            <input type="text" class="form-control" id="inputquantity" name="quantity" placeholder="Quantity" <%if (uflag) { %>  value="<%= product.quantity %>"  <%}%>>
            </div>
        </div>
        <div class="form-group" >
            <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputshop">Shop</label>
                    </div>
                    <select class="custom-select" id="inputshop" name="shop">
                        <option selected><%- shopid.name %></option>
                    </select>
                    </div>
            </div> 
            <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputcatogry">Catogry</label>
                    </div>
                    <select class="custom-select" id="inputcatogry" name="catogry">
                        <%if (uflag) { %>   <option value="<%= productcatgry.categoryid%>" selected><%= productcatgry.name %></option> 
                        <% } else { %>
                          <% catgrys.forEach(function(catgry){ %>
                            <option value="<%= catgry.categoryid %>"><%= catgry.name %></option>
                          <% })%>
                        
                        <% } %>
                    </select>
                    </div>
            </div>
        <div class="form-row">
            <div class="form-group col-md-4">
              <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" id="Description" name="description" rows="3" ><%if (uflag) { %>  <%= product.description %>  <%}%></textarea>
              </div> 
            </div>
        </div>
        <input type="hidden" name="shopid" value="<%= shopid.shopid%>"> 
        <button type="submit" class="btn btn-primary">ADD</button>
    </form>

 <br>

    <!-- Js Plugins -->
    <%- include("pluginjs") -%>


</body>

</html>